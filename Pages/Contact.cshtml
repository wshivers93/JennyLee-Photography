@page
@model JennyLeePhotography.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}


<div class="row vh-100 align-items-center">
    <div class="col">
        <div class="mb-3">
            <h1>Contact</h1>
        </div>

        <form>
            <div class="form-group row">
                <div class="col-sm-6">
                    <input type="text" class="form-control" id="nameInput" placeholder="Name" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-6">
                    <input type="email" class="form-control" id="emailInput" placeholder="Email" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-6">
                    <label for="requestDesc">Reason for Contact</label>
                    <textarea class="form-control" id="requestDesc" rows="5"></textarea>
                </div>
            </div>

            <button id="contact_submit" type="submit" class="btn btn-outline-dark">Submit</button>
        </form>
    </div>
</div>




